<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.MainPage"
             NavigatedTo="ContentPage_NavigatedTo"
             NavigatedFrom="ContentPage_NavigatedFrom">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!-- Tool Bar-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="Show Completed Tasks:"/>
                    <CheckBox Margin="5"
                              Grid.Column="1"
                              IsChecked="{Binding IsShowCompleted}"/>
                </Grid>
                <!-- ToDo List-->
                <ListView
                    Grid.Row="1"
                    ItemsSource="{Binding ToDos}"
                    SelectedItem="{Binding SelectedToDo}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding Model.IsCompleted}"
                                              Grid.Column="0"/>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Label TextColor="Red"
                                               Grid.Row="0"
                                               Text="{Binding Model.Name}"/>
                                        <Label Grid.Row="1"
                                               Text="{Binding Model.Description}"/>
                                    </Grid>
                                    <Button Grid.Column="2"
                                            Text="Edit"
                                            Clicked="InLineEditClicked"
                                            Command="{Binding EditCommand}"/>
                                    <Button Grid.Column="3"
                                            Text="Delete"
                                            Clicked="InLineDeleteClicked"
                                            Command="{Binding DeleteCommand}"
                                            BackgroundColor="Black"
                                            TextColor="Red"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Project List-->
                <ListView
                    Grid.Row="2"
                    ItemsSource="{Binding Projects}"
                    SelectedItem="{Binding SelectedProject}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Label TextColor="Red"
                                               Grid.Row="0"
                                               Text="{Binding Model.Name}"/>
                                        <Label Grid.Row="1"
                                               Text="{Binding Model.Description}"/>
                                    </Grid>
                                    <Button Grid.Column="1"
                                            Text="Edit"
                                            Clicked="InLineEditClickedProject"
                                            Command="{Binding EditCommand}"/>
                                    <Button Grid.Column="2"
                                            Text="Delete"
                                            Clicked="InLineDeleteClickedProject"
                                            Command="{Binding DeleteCommand}"
                                            BackgroundColor="Black"
                                            TextColor="Red"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Button Bar -->
                <VerticalStackLayout Grid.Row="3">
                    <Button Text="Add New ToDo"
                            Clicked="AddNewClickedToDo"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="4">
                    <Button Text="Add New Project"
                            Clicked="AddNewClickedProject"/>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
