<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.MainPage"
             NavigatedTo="ContentPage_NavigatedTo"
             NavigatedFrom="ContentPage_NavigatedFrom">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- ToDo Header-->
                <Label Grid.Row="0"
                       Margin="0,10,0,10"
                       Text="ToDo List"
                       FontSize="32"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                <!-- Show Checked Bar-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="Show Completed Tasks:"/>
                    <CheckBox Margin="0"
                              Grid.Column="1"
                              IsChecked="{Binding IsShowCompleted}"/>
                </Grid>
                <!-- ToDo List-->
                <ListView
                    Grid.Row="2"
                    ItemsSource="{Binding ToDos}"
                    SelectedItem="{Binding SelectedToDo}"
                    RowHeight="100">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding Model.IsCompleted}"
                                              Grid.Column="0"/>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Label TextColor="Yellow"
                                               Grid.Row="0"
                                               Text="{Binding Model.Name}"/>
                                        <Label Grid.Row="1"
                                               Text="{Binding Model.Description}"/>
                                        <Label Grid.Row="2"
                                               Text="{Binding PriorityDisplay}"/>
                                        <Label Grid.Row="3"
                                               Text="{Binding DueDateDisplay}"/>
                                        <Label Grid.Row="4"
                                               Text="{Binding ProjIdDisplay}"/>
                                    </Grid>
                                    <Button Grid.Column="2"
                                            Margin="5,20,5,20"
                                            Text="Edit"
                                            Clicked="InLineEditClickedToDo"
                                            Command="{Binding EditCommand}"/>
                                    <Button Grid.Column="3"
                                            Margin="5,20,5,20"
                                            Text="Delete"
                                            Clicked="InLineDeleteClickedToDo"
                                            Command="{Binding DeleteCommand}"
                                            BackgroundColor="Black"
                                            TextColor="Red"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- ToDo Button Bar -->
                <VerticalStackLayout Grid.Row="3">
                    <Button Text="Add New ToDo"
                            Clicked="AddNewClickedToDo"/>
                </VerticalStackLayout>

                <!-- Project Header-->
                <Label Grid.Row="4"
                       Margin="0,10,0,10"
                       Text="Project List"
                       FontSize="32"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                <!-- Project List-->
                <ListView
                    Grid.Row="5"
                    ItemsSource="{Binding Projects}"
                    SelectedItem="{Binding SelectedProject}"
                    RowHeight="80">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label FontSize="20"
                                           Grid.Column="0"
                                           Text="{Binding Model.Id, StringFormat='       ({0})'}"/>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Label TextColor="Green"
                                               Grid.Row="0"
                                               Text="{Binding Model.Name}"/>
                                        <Label Grid.Row="1"
                                               Text="{Binding Model.Description}"/>
                                        <Label Grid.Row="2"
                                               Text="{Binding ToDosDisplay}"/>
                                        <Label Grid.Row="3"
                                               Text="{Binding CompletedPercentDisplay}"/>
                                    </Grid>
                                    <Button Grid.Column="2"
                                            Margin="5,10,5,10"
                                            Text="Edit"
                                            Clicked="InLineEditClickedProject"
                                            Command="{Binding EditCommand}"/>
                                    <Button Grid.Column="3"
                                            Margin="5,10,5,10"
                                            Text="Delete"
                                            Clicked="InLineDeleteClickedProject"
                                            Command="{Binding DeleteCommand}"
                                            BackgroundColor="Black"
                                            TextColor="Red"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Project Button Bar -->
                <VerticalStackLayout Grid.Row="6">
                    <Button Text="Add New Project"
                            Clicked="AddNewClickedProject"/>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
