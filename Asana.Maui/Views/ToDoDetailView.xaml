<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.Views.ToDoDetailView"
             Title="ToDo Details"
             NavigatedFrom="ContentPage_NavigatedFrom"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="10">
        <!-- Name Entry-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <!--Label Text="  ID: " Grid.Column="0"/-->
            <!--Entry Text="{Binding Model.Id}" Grid.Column="1" IsReadOnly="True"/-->
            <Label Text="Name: "
                   Grid.Column="0"/>
            <Entry Text="{Binding Model.Name}"
                   Grid.Column="1"/>
        </Grid>
        <!-- Priority and Due Date Entry-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Priority: "
                   Grid.Column="0"/>
            <Picker ItemsSource="{Binding Priorities}"
                    SelectedItem="{Binding SelectedPriority}"
                    Grid.Column="1"/>
            <Label Text="    Due Date: "
                    Grid.Column="2"/>
            <DatePicker Date="{Binding DueDate}"
                    Grid.Column="3"/>
        </Grid>
        <!-- Description Entry-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Description: "
                   Grid.Column="0"/>
            <Entry Text="{Binding Model.Description}"
                   Grid.Column="1"/>
        </Grid>
        <!-- Assign-to-Project Picker-->
        
        <!-- Buttons-->
        <Button Text="OK"
                Clicked="OkClicked"/>
        <Button Text="Cancel"
                Clicked="CancelClicked"
                BackgroundColor="Gray"/>
    </VerticalStackLayout>
</ContentPage>